<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.App.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/eyoj_green</item>
        <item name="colorPrimaryVariant">@color/eyoj_green_darker</item>
    </style>

    <style name="Widget.App.Button.TextButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Widget.App.Button.UnelevatedButton.IconOnly" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Widget.App.FavoriteButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">5dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ShapeAppearance.App.CartButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/product_item_card_radius</item>
        <item name="cornerSizeBottomRight">@dimen/product_item_card_radius</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CardView.TopCorners" parent="">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CardView.TopCorners.Small" parent="">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.Filled.White" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">@dimen/product_search_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/product_search_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/product_search_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/product_search_input_corner_radius</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
    </style>

</resources>